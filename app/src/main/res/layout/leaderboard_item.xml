<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/leaderboard_item_card"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboard_item_position"
            android:textSize="18dp"
            android:text="1." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboard_item_name"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:text="Tejas Chheda and Mithil Dani"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboard_item_applied"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/transparent_black"
            android:layout_toRightOf="@+id/leaderboard_item_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboard_item_clues_solved"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:layout_marginRight="4dp"
            android:text="7"/>



    </RelativeLayout>



    </android.support.v7.widget.CardView>